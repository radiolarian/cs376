<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noon.cs376.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/training_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text='Say "Hello, today is a good day and tomorrow will be even better."'
            android:textAlignment="center"
            android:textSize="16pt"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/recording_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wait in a quiet environment until the button below is ready. Then, Press and hold to record. Release to stop recording."
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="417dp" />

        <Button
            android:id="@+id/record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please wait..."
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="493dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
