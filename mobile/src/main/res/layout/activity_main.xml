<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noon.cs376.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/add_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Sample (Hold)"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="110dp" />

        <Button
            android:id="@+id/train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/add_sample"
            android:layout_marginTop="11dp"
            android:text="Train Model"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="166dp" />

        <Button
            android:id="@+id/test_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/train"
            android:layout_marginTop="12dp"
            android:text="Test Model" />

        <Button
            android:id="@+id/identify_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/test_model"
            android:layout_marginTop="12dp"
            android:text="Identify Speaker" />

        <TextView
            android:id="@+id/welcome_msg"
            android:layout_below="@+id/identify_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.jjoe64.graphview.GraphView
            android:layout_below="@+id/welcome_msg"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graph" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
